{
  "name": "jrnl-render",
  "version": "4.2.0",
  "description": "Render a jrnl (jrnl.sh) file as a webpage.",
  "browser": "dist/jrnl-render.standalone.js",
  "unpkg": "dist/jrnl-render.standalone.min.js",
  "main": "dist/jrnl-render.js",
  "scripts": {
    "build:standalone": "NODE_ENV=development STANDALONE=true rollup -c -o dist/jrnl-render.standalone.js",
    "build:standalone:min": "NODE_ENV=production STANDALONE=true rollup -c -o dist/jrnl-render.standalone.min.js",
    "build:cjs": "NODE_ENV=production rollup -c -o dist/jrnl-render.js",
    "build:cjs:dev": "NODE_ENV=development rollup -c -o dist/jrnl-render.debug.js",
    "build:demo": "NODE_ENV=production STANDALONE=true rollup -c -o example/jrnl-render.standalone.js",
    "build": "npm-run-all --parallel build:cjs build:cjs:dev build:standalone build:standalone:min",
    "clean": "rimraf dist examples/jrnl-render.standalone.js",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "test": "npm run lint && jest",
    "release": "np",
    "lint": "eslint . --ext js,jsx",
    "dev": "npm run clean && NODE_ENV=development STANDALONE=true SERVE=true rollup -c --watch -o dist/jrnl-render.standalone.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": "sloria/jrnl-render",
  "authors": [
    "Steven Loria (https://github.com/sloria)"
  ],
  "license": "MIT",
  "keywords": [
    "jrnl",
    "jrnl.sh"
  ],
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chokidar": "^2.0.4",
    "cssnano": "^4.0.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "np": "^3.0.4",
    "npm-run-all": "^4.0.2",
    "preact": "^8.2.9",
    "preact-compat": "^3.18.0",
    "prettier": "^1.13.7",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.66.2",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-filesize": "^4.0.1",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.0.4",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-serve": "^0.6.0",
    "rollup-plugin-uglify": "^5.0.2",
    "tachyons": "^4.11.0"
  },
  "peerDependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "prop-types": "^15.6.2",
    "tachyons": "^4.11.0",
    "highlight.js": "^9.12.0"
  },
  "browserslist": [
    "IE >= 11"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,css,md}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./src/setupTests.js",
    "testURL": "http://localhost/"
  },
  "dependencies": {
    "jrnl-parse": "^0.2.0",
    "react-icons": "^3.0.1",
    "rehype-highlight": "^2.1.0",
    "rehype-stringify": "^4.0.0",
    "remark": "^9.0.0",
    "remark-ping": "^2.1.2",
    "remark-rehype": "^3.0.0",
    "slugify": "^1.3.0"
  }
}
